{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "listEmittedFiles": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
